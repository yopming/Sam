            a.item(href="http://fdc.vemic.com:3001/", target="_blank") 前端文档 Jingwei
            a.item(href="http://demo.vemic.com/demos/ins/old/", target="_blank") 老原型库

      div.right.menu
        // div.item.sam-search
          // form(action='#', method='POST')
            // div.ui.mini.action.input
              // input(type='text', placeholder='Type to search')
              // div.ui.button(type='submit') Go
        if current_user
          a.item(href='/admin')= current_user.username
        else
          a.item(href='/sign')
            i.sign.out.icon
            | 登入

    //- body
    div.sam-wrap(ng-view)
