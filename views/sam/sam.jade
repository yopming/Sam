doctype
html(ng-app="sam")
	head
		title Sam
		link(rel='stylesheet', href='/css/sam.css')
		link(rel='shortcut icon', href='/favicon.ico', type='image/x-icon')
		meta(name='renderer', content='webkit')
		script(src="/js/chives/angular/angular.min.js")
		script(src="/js/chives/angular-route/angular-route.min.js")
		script(src="/js/chives/angular-resource/angular-resource.js")
		script(src="/js/chives/angular-ui-utils/ui-utils.js")
		script(src="/js/chives/angular-sanitize/angular-sanitize.js")
		script(src="/js/chives/underscore/underscore.js")
		script(src="/mvc/sam/app.js")
		script(src="/mvc/sam/controller/dashboard_controller.js")
		script(src="/mvc/sam/controller/project_controller.js")
		script(src="/mvc/sam/controller/operation_controller.js")
		script(src="/mvc/sam/controller/reference_controller.js")
		script(src="/mvc/sam/controller/share_controller.js")
		script(src="/mvc/sam/controller/graphic_controller.js")
		script(src="/mvc/sam/controller/timeline_controller.js")
		script(src="/mvc/sam/service/project_service.js")
		script(src="/mvc/sam/filter/project_filter.js")
		script(src="/mvc/sam/filter/operation_filter.js")
		script(src="/mvc/sam/directive/sam_directive.js")

	body#sam

		//- header
		div.ui.orange.inverted.menu.sam-header
			a.item(href="#!/project", sam-active="active")
				i.block.layout.icon
				| 项目
			a.item(href="#!/operation/mail", sam-active="active")
				i.mail.icon
				| 邮件
			a.item(href="#!/operation/topic", sam-active="active")
				i.tasks.icon
				| 专题
			a.item(href="#!/share", sam-active="active")
				i.book.icon
				| 沙盒
			a.item(href="#!/graphic", sam-active="active")
				i.file.image.outline.icon
				| 视觉稿
			a.item(href="#!/timeline", sam-active="active")
				i.time.icon
				| 时间线

			div.right.menu
				a.item(href="http://demo.vemic.com/demos/ins/%E5%8E%9F%E5%9E%8B/xyz/%E6%96%B0%E4%B8%80%E7%AB%99%E5%AE%98%E7%BD%91%E8%A7%86%E8%A7%89%E8%A7%84%E8%8C%83001/#p=框架", target="_blank")
					i.unhide.icon
					| 视觉规范
				a.item(href="http://demo.vemic.com/demos/ins/原型/xyz/交互规范-V1.0/start.html", target="_blank")
					i.exchange.icon
					| 交互规范
				a.item(href="http://fdc.vemic.com:3001/", target="_blank")
					i.file.text.outline.icon
					| 前端文档 Jingwei
				a.item(href="http://demo.vemic.com/demos/ins/old/", target="_blank")
					i.adjust.icon
					| 老原型库
				span.item
					| &nbsp;
				if current_user
					a.item(href='/admin')= current_user.username
				else
					a.item(href='/sign')
						i.sign.out.icon
						| 登入

		//- body
		div.sam-wrap(ng-view)
